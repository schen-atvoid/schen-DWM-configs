#################################################################
# SUPER + FUNCTION KEYS
#################################################################

#################################################################
# SUPER + ... KEYS
#################################################################

#archlinux-logout
super + x
    archlinux-logout

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#rofi
#super + d
    #~/.config/arco-dwm/launcher/launcher.sh
#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#Firefox:
#super + f
	#firefox

#drop-down-terminal
super + shift + t
	xfce4-terminal --drop-down


